<% if @comp_move == "rock" %>
    <% @outcome = "lost" %>
<% elsif @comp_move == "paper" %>
    <% @outcome = "won" %>
<% else %>
    <% @comp_move = "scissors" %>
    <% @outcome = "tied" %>
<% end %>

<h2>
  We played scissors!
</h2> 

<h2>
  They played <%= @comp_move %>!
</h2>

<h2>
  We <%= @outcome %>!
</h2>
