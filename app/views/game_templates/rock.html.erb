<div style="display: flex; flex-flow: column">
  <a href="/rock">Play Rock</a>
  <a href="/paper">Play Paper</a>
  <a href="/scissors">Play Scissors</a>
</div>

<% if @comp_move == "rock" %>
    <% @outcome = "tied" %>
<% elsif @comp_move == "paper" %>
    <% @outcome = "lost" %>
<% else %>
    <% @comp_move = "scissors" %>
    <% @outcome = "won" %> 
<% end %>

<h2>
  We played rock!
</h2> 

<h2>
  They played <%= @comp_move %>!
</h2>

<h2>
  We <%= @outcome %>!
</h2>

